c include physical constants
      real*4 pi,pi2,gascon,cp,radea,ww,akap,ga,secday,cv,cz,ct,cnc,co,gnorm,xnorm
      parameter (pi = 3.141592654)
      parameter (pi2 = 2.*pi)
c  gas constant for dry air  [meters**2/seconds**2/degrees]
      parameter (gascon = 287.0)
c  specific heat at constant pressure [J/deg/kg]
      parameter (cp = 1004.)
c  earth radius [meters]
      parameter (radea = 6371000.0)
c  rotation rate of earth  [radians/second]
      parameter (ww = 7.292e-5)
c  kappa, r/cp, page 640, hoskins and simmons
      parameter (akap = 0.286)
c  gravitational acceleration  [meters/seconds**2]
      parameter (ga = 9.81)
c  seconds/day
      parameter (secday = 86400.)

c  evaluate scale factors for non-dimensionalizing
c  velocity scaling
      parameter (cv = radea*ww)
c  geopotential scaling
      parameter (cz = cv*cv)
c  temperature scaling
      parameter (ct = cz/gascon)
c  newtonian cooling coefficient scaling
      parameter (cnc = ww*secday)
c  orography scaling
      parameter (co = ga/((radea*ww)**2))
c  surface stress factor
      parameter (gnorm = ga/radea/(ww*ww))
c  heating rate scaling
      parameter (xnorm = 1./(ct*secday*ww))
