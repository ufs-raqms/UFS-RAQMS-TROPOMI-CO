c Kawa photolysis table parameters
      parameter (npr=24)
      integer nsza,no3
      parameter (nlam=79,nsza=20,no3=12)
      parameter (nxsec=47,nts=200)
      real(CHEM_KIND_R4) :: xtab,sdat,o2jdat,rlam,o3_tab,pr_tab
